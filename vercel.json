{
    "version": 2,
    "builds": [
        {
            "src": "wsgi.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "15mb"
            }
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "status": 301,
            "headers": { 
                "Location": "https://sprunkr.online/$1"
            },
            "conditions": { 
                "protocol": "http" 
            }
        },
        {
            "src": "/(.*)",
            "status": 301,
            "headers": { 
                "Location": "https://sprunkr.online/$1"
            },
            "conditions": { 
                "host": "www.sprunkr.online" 
            }
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/sitemap.xml",
            "dest": "/static/sitemap.xml"
        },
        {
            "src": "/robots.txt",
            "dest": "/static/robots.txt"
        },
        {
            "src": "/(.*)",
            "dest": "wsgi.py"
        }
    ],
    "env": {
        "PYTHONPATH": "."
    }
}