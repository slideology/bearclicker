{
    "version": 2,
    "builds": [
        {
            "src": "wsgi.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "maxLambdaSize": "15mb"
            }
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "has": [
                {
                    "type": "header",
                    "key": "x-forwarded-proto",
                    "value": "http"
                }
            ],
            "status": 301,
            "headers": { 
                "Location": "https://bearclicker.net/$1"
            }
        },
        {
            "src": "/(.*)",
            "has": [
                {
                    "type": "host",
                    "value": "www.bearclicker.net"
                }
            ],
            "status": 301,
            "headers": { 
                "Location": "https://bearclicker.net/$1"
            }
        },
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/sitemap.xml",
            "dest": "/static/sitemap.xml"
        },
        {
            "src": "/robots.txt",
            "dest": "/static/robots.txt"
        },
        {
            "src": "/game/(.*)\\.html",
            "dest": "/api/game-api?gameId=$1"
        },
        {
            "src": "/game/(.*)",
            "dest": "/api/game-api?gameId=$1"
        },
        {
            "src": "/(.*)",
            "dest": "wsgi.py"
        }
    ],
    "env": {
        "PYTHONPATH": "."
    }
}
